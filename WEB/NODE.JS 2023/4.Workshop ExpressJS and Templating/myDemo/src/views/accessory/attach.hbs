<main>
  <h1>Attach a new accessory</h1>
  <div class="form">
    <h2>{{cube.name}}</h2>
    <img
      class="cube"
      src="{{cube.imageUrl}}"
    />
    {{#if hasAccessories}}
    <form action ='/cubes/{{cube._id}}/attach-accessory' method="POST">
      <label for="accessory">Accessories</label>
       <select id="accessory" name="accessory" />
            {{!-- <option value="Accessory 1">Accessory 1</option>
            <option value="Accessory 2">Accessory 2</option>
            <option value="Accessory 3">Accessory 3</option>
            <option value="Accessory 4">Accessory 4</option>
            <option value="Accessory 5">Accessory 5</option> --}}
            {{#each accessories}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
      <input type="submit" value="Attach" />
    </form>
    {{else}}
    <h3 class="italic">This cube has all available accessories so far or there
      is no available at all...
    </h3>
    {{/if}}
    <a class="btn" href="/cubes/{{cube._id}}/details">Back</a>
  </div>
</main>