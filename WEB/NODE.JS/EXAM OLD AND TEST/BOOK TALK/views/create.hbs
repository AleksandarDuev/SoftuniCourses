



    <section class="create-form-container">

        <form action="/create" method="post">
            <h3>Create Book Review</h3>
            <label>Title</label>
            <input type="text" name="title" class="box" value="{{data.title}}">
            <label>Author</label>
            <input type="text" name="author" class="box" value="{{data.author}}">
            <label>Genre</label>
            <input type="text" name="genre" class="box" value="{{data.genre}}">
            <label>Stars</label>
            <input type="number" name="stars" class="box" value="{{data.stars}}">
            <label>Image</label>
            <input type="text" name="img" class="box" value="{{data.img}}" >
            <label>Review</label>
            <textarea class="box" name="bookReview">{{data.book.Review}}</textarea>
            <input type="submit" value="Create" class="btn">
        </form>
    </section>
