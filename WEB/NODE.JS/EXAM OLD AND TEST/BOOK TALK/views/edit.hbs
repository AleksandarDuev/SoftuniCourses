<section class="edit-form-container">

  <form action="/edit/{{book._id}}" method="post">
    <h3>Edit Book Review</h3>
    <label>Title</label>
    <input type="text" name="title" class="box" value="{{book.title}}" id="8" />
    <label>Author</label>
    <input
      type="text"
      name="author"
      class="box"
      value="{{book.author}}"
      id="9"
    />
    <label>Genre</label>
    <input
      type="text"
      name="genre"
      class="box"
      value="{{book.genre}}"
      id="10"
    />
    <label>Stars</label>
    <input
      type="number"
      name="stars"
      class="box"
      value="{{book.stars}}"
      id="11"
    />
    <label>Image</label>
    <input type="text" name="img" class="box" value="{{book.img}}" id="12" />
    <label>Review</label>
    <textarea class="box" name="bookReview">{{book.bookReview}}</textarea>
    <input type="submit" value="edit" class="btn" />
  </form>
</section>